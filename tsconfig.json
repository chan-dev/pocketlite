{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./models/*"]
    },
    "target": "es2018",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": ["node_modules/", "client/**/*"]
}
